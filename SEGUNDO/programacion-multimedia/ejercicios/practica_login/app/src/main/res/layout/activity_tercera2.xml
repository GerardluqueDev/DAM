<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imagenRegistro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/nombreRegistro"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Introduce tu nombre"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/imagenRegistro"
        app:layout_constraintStart_toStartOf="@+id/imagenRegistro"
        app:layout_constraintTop_toBottomOf="@+id/imagenRegistro" />

    <EditText
        android:id="@+id/apellidoRegistro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:hint="Introduce tus Apellidos"
        app:layout_constraintEnd_toEndOf="@+id/nombreRegistro"
        app:layout_constraintStart_toStartOf="@+id/nombreRegistro"
        app:layout_constraintTop_toBottomOf="@+id/nombreRegistro" />

    <EditText
        android:id="@+id/emailRegistro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:hint="Introduce tu Email"
        app:layout_constraintEnd_toEndOf="@+id/apellidoRegistro"
        app:layout_constraintStart_toStartOf="@+id/apellidoRegistro"
        app:layout_constraintTop_toBottomOf="@+id/apellidoRegistro" />

    <EditText
        android:id="@+id/passRegistro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:hint="Introduce una contraseÃ±a"
        app:layout_constraintEnd_toEndOf="@+id/emailRegistro"
        app:layout_constraintStart_toStartOf="@+id/emailRegistro"
        app:layout_constraintTop_toBottomOf="@+id/emailRegistro" />

    <Button
        android:id="@+id/btRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blueClaro"
        android:layout_marginTop="24dp"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="@+id/passRegistro"
        app:layout_constraintStart_toStartOf="@+id/passRegistro"
        app:layout_constraintTop_toBottomOf="@+id/passRegistro" />

</androidx.constraintlayout.widget.ConstraintLayout>